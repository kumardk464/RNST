<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="#313D47"
    android:orientation="vertical"
   
  >

    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color_shade"
        android:padding="20dp" >

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/White"
            android:text="Contact"
           
            android:textSize="22dp" />

        <TextView
            android:id="@+id/rnst_headoffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/address"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22dp"
             android:textColor="@color/White"
            android:text="Head office"
             android:textSize="18dp"
             />
        
        <TextView
            android:id="@+id/headoffice_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rnst_headoffice"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
             android:textColor="@color/White"
            android:text="@string/primary_Address"
             android:textSize="14dp" />
        
        <TextView
            android:id="@+id/secondry_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/headoffice_address"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/White"
            android:text="Secondary Office"
             android:textSize="18dp"
          />
         <TextView
            android:id="@+id/secondry_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/secondry_office"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/White"
            android:text="@string/secondry_Address"
             android:textSize="14dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
       
    </RelativeLayout>

</LinearLayout>
